get_ipython().getoutput("rm /home/andbro/TwistPy/twistpy/SVC_models/nearsurface.pkl")

svm = SupportVectorMachine(name="nearsurface")

svm.train(
    wave_types=["R", "L", "P", "SV", "SH", "Noise"],
    N=10000,
    scaling_velocity=scaling_velocity,
    vp=(500, 4000),
    vp_to_vs=(1.6, 1.8),
    vl=(500, 4000),
    vr=(500, 4000),
    phi=(0, 360),
    theta=(0, 90),
    xi=(-90, 90),
