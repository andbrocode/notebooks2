    dfv['temp'] = __reduce(np.interp(df7.time_sec, time, temp)[N1:N2], 10)

    if component == "abs":
        disp = np.sqrt(df7.x_um_rel[N1:N2].values**2+df7.y_um_rel[N1:N2].values**2)
