    temp = __reduce(_ps5[0].data+_ps7[0].data+_ps9[0].data, 10)
    dfz = DataFrame()
    dfz['temp'] = __reduce(np.interp(df3.time_sec, time, temp)[N1:N2], 10)

    if component == "abs":
        disp = np.sqrt(df3.x_um_rel[N1:N2].values**2+df3.y_um_rel[N1:N2].values**2)
