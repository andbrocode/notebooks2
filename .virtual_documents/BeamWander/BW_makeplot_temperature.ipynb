    elif component == "y":
        disp = df0.y_um_rel[N1:N2].values

    dfu['x'] = __reduce(disp, 10)
    dfu['time'] = df0.time_sec[N1:N2].values

    temp = __reduce(_ps1[0].data+_ps7[0].data+_ps9[0].data, 10)
