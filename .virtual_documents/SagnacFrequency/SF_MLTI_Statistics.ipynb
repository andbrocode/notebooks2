    ax[2].hist(durationZ, bins=nbins, range=(0, rmax), log=True, rwidth=0.8, zorder=2)

    ax[0].set_ylabel("Count")

    for i, ring in enumerate(["RU", "RV", "RZ"]):
        ax[i].set_xlabel("Inter-MLTI time (min)")
        ax[i].set_title(ring)
        ax[i].grid(which="both", zorder=0, alpha=0.5)

    plt.show();
    return fig

fig = __makeplot();







