def __process(df0):

    # cut to time period
    df0 = df0[(df0.time_utc >= config['tbeg']) & (df0.time_utc <= config['tend'])]

    df0['y_um_rel'] = __reduce(df0.y_um_rel, 10)
    df0['x_um_rel'] = __reduce(df0.x_um_rel, 10)

    df0.reset_index(drop=True, inplace=True)
    return df0

