##### NORTH ##################
    fnames = [fnameN]

##### VERTICAL ###############
#    fnames = [fnameZ]

#########################################
    data = []
    chas = []
    for fname in fnames:
        X, Y, d, median = get_ppsd(fname)
        data.append((X, Y, d, median))
        cha = fname.split('_')[2]
        chas.append(cha)
    cmap = 'magma_r'
    cb_label = r'\%'


    plot_diagram(data, cmap, cb_label, chas)




main()




