    if mode == "PSD":
        y_axis = 10**(bins/10)
        medians = 10**(bins_medians/10)
        ymin, ymax = 1e-26, 1e-20
    elif mode == "ASD":
        y_axis = 10**(bins/20)
        medians = 10**(bins_medians/20)
