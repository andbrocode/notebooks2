    ax2.set_xlabel("Frequency in Hz", fontsize=font, labelpad=5)
    ax2.set_xticklabels(1/ff, fontsize=11)    
    

    
    x_axis_mod = x_axis + (np.roll(x_axis,-1)-x_axis)/2; x_axis_mod[-1] = x_axis[-1] + (x_axis[-1]-x_axis[-2])/2

